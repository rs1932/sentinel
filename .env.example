# Sentinel Access Platform Environment Variables
# Copy this file to .env and update values as needed

# Application
APP_NAME="Sentinel Access Platform"
VERSION="1.0.0"
DEBUG=true

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sentinel_db
DATABASE_SCHEMA=sentinel
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (disabled by default)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
CACHE_BACKEND=memory
CACHE_TTL=300

# Security
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Approval Chains
APPROVAL_TIMEOUT_HOURS=48
AUTO_APPROVE_ENABLED=false

# Biometrics
BIOMETRICS_ENABLED=false
KEYSTROKE_THRESHOLD=0.7
MOUSE_MOVEMENT_THRESHOLD=0.6

# Feature Store
FEATURE_STORE_TTL=3600
FEATURE_COMPUTE_BATCH_SIZE=100

# AI Agent
AGENT_MESSAGE_TIMEOUT=30
AGENT_RETRY_COUNT=3

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# CORS
CORS_ENABLED=true
CORS_ALLOW_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","PATCH","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Account Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30