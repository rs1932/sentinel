{
  "info": {
    "name": "Sentinel Groups API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0",
    "description": "Postman collection for Group Management endpoints"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8000/api/v1" },
    { "key": "token", "value": "{{token}}" },
    { "key": "group_id", "value": "" },
    { "key": "user_id", "value": "" },
    { "key": "role_id", "value": "" }
  ],
  "item": [
    {
      "name": "Create Group",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/groups/", "host": ["{{baseUrl}}"], "path": ["groups", ""] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"apac-ops\",\n  \"display_name\": \"APAC Ops\",\n  \"description\": \"Operations in APAC\",\n  \"metadata\": {\"region\": \"APAC\"},\n  \"is_active\": true\n}"
        }
      },
      "response": []
    },
    {
      "name": "List Groups",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{baseUrl}}/groups/", "host": ["{{baseUrl}}"], "path": ["groups", ""] }
      },
      "response": []
    },
    {
      "name": "Get Group",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{baseUrl}}/groups/{{group_id}}", "host": ["{{baseUrl}}"], "path": ["groups", "{{group_id}}"] }
      },
      "response": []
    },
    {
      "name": "Update Group",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/groups/{{group_id}}", "host": ["{{baseUrl}}"], "path": ["groups", "{{group_id}}"] },
        "body": { "mode": "raw", "raw": "{\n  \"display_name\": \"APAC Operations\"\n}" }
      },
      "response": []
    },
    {
      "name": "Delete Group",
      "request": {
        "method": "DELETE",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{baseUrl}}/groups/{{group_id}}", "host": ["{{baseUrl}}"], "path": ["groups", "{{group_id}}"] }
      },
      "response": []
    },
    {
      "name": "Add Users",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/groups/{{group_id}}/users", "host": ["{{baseUrl}}"], "path": ["groups", "{{group_id}}", "users"] },
        "body": { "mode": "raw", "raw": "{\n  \"user_ids\": [\"{{user_id}}\"]\n}" }
      },
      "response": []
    },
    {
      "name": "List Members",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{baseUrl}}/groups/{{group_id}}/users", "host": ["{{baseUrl}}"], "path": ["groups", "{{group_id}}", "users"] }
      },
      "response": []
    },
    {
      "name": "Remove User",
      "request": {
        "method": "DELETE",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{baseUrl}}/groups/{{group_id}}/users/{{user_id}}", "host": ["{{baseUrl}}"], "path": ["groups", "{{group_id}}", "users", "{{user_id}}"] }
      },
      "response": []
    },
    {
      "name": "Assign Roles",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/groups/{{group_id}}/roles", "host": ["{{baseUrl}}"], "path": ["groups", "{{group_id}}", "roles"] },
        "body": { "mode": "raw", "raw": "{\n  \"role_ids\": [\"{{role_id}}\"]\n}" }
      },
      "response": []
    },
    {
      "name": "List Roles",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{baseUrl}}/groups/{{group_id}}/roles", "host": ["{{baseUrl}}"], "path": ["groups", "{{group_id}}", "roles"] }
      },
      "response": []
    },
    {
      "name": "Remove Role",
      "request": {
        "method": "DELETE",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{baseUrl}}/groups/{{group_id}}/roles/{{role_id}}", "host": ["{{baseUrl}}"], "path": ["groups", "{{group_id}}", "roles", "{{role_id}}"] }
      },
      "response": []
    }
  ]
}

